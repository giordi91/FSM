<Window x:Class="FSMEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FSMEditor"
        mc:Ignorable="d"
        Background="Black"
        Title="FSM Editor V 1.0.0" Height="350" Width="525">
    <StackPanel>
        <Button x:Name="addbutton" Content="ADD STATE" Click="Button_Click"></Button>
        <Canvas x:Name="view" Background="Transparent" MouseLeftButtonDown="view_MouseLeftButtonDown" Height="290">
            <Rectangle Fill="#FF1C1C25" Height="100" Stroke="#FF2EE411" Width="135" Canvas.Left="149" Canvas.Top="95" RadiusX="10" RadiusY="10" StrokeThickness="5"/>
        </Canvas>
    </StackPanel>


</Window>
